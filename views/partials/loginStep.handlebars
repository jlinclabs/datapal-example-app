{{#> step title="1. Login to Data Pal" complete=step1Complete }}
  {{#unless user}}
    {{#> datapalButton href="/login" }}
      Login via DataPal
    {{/ datapalButton }}
  {{else}}
    <div style="display: flex; align-items: center;">
      <div>
        <span>Logged in as:&nbsp;</span>
        <a href="{{user.urls.account}}">
          {{#if profile.avatar}}
            {{> avatar src=profile.avatar alt=profile.name}}
          {{/if}}
          <span>{{profile.name}}</span>
        </a>
      </div>
      <a href="{{user.urls.account}}">
        {{user.displayName}}
      </a>
      {{#if user.avatar}}
        <a href="{{user.urls.account}}" style="margin-left: 7px;">
          {{> avatar src=user.avatar alt=user.displayName}}
        </a>
      {{/if}}
      <a href="/logout" style="margin-left: 7px;">Logout</a>
    </div>
  {{/unless}}
{{/step}}
